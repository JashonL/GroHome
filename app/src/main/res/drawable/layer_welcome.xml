<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 整体的背景颜色 -->
    <item>
        <color android:color="#F5F9F9" />
    </item>

    <item android:gravity="top" android:top="@dimen/dp_50">
        <bitmap
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/sketch" />

    </item>

    <item android:gravity="bottom" android:bottom="@dimen/dp_50">
        <bitmap
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/logo_bottom" />
    </item>

</layer-list>