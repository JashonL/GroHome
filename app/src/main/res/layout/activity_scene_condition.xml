<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerView"
        layout="@layout/toobar_title" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_pull"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <TextView
                android:id="@+id/tvDeviceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/color_text_33"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSceneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:textColor="@color/color_text_33"
                android:textSize="@dimen/size_content_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDeviceTitle" />

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_25"
                android:textColor="@color/color_text_33"
                android:textSize="@dimen/size_content_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSceneName" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_setting_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDeviceName">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/dp_12" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/dp_12" />


                <androidx.constraintlayout.widget.Group
                    android:id="@+id/gp_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="tv_switch_use,cb_switch_use,v_switch_divider" />


                <TextView
                    android:id="@+id/tv_switch_use"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:text="@string/m255_use_this_condition"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintLeft_toLeftOf="@+id/gl_begin"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/cb_switch_use"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selector_checkbox"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textColor="@color/color_text_33"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_switch_use"
                    app:layout_constraintRight_toRightOf="@+id/gl_end"
                    app:layout_constraintTop_toTopOf="@+id/tv_switch_use" />

                <View
                    android:id="@+id/v_switch_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/tv_switch_use" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/gp_switch_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="tv_switch_status,tv_switch_onoff,iv_switch_onoff,v_switch_margin_divider" />

                <TextView
                    android:id="@+id/tv_switch_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:text="@string/m214_switch_status"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintLeft_toLeftOf="@+id/gl_begin"
                    app:layout_constraintTop_toBottomOf="@+id/v_switch_divider" />

                <TextView
                    android:id="@+id/tv_switch_onoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/m167_on"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_switch_status"
                    app:layout_constraintRight_toLeftOf="@+id/iv_switch_onoff"
                    app:layout_constraintTop_toTopOf="@+id/tv_switch_status" />

                <ImageView
                    android:id="@+id/iv_switch_onoff"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/scenes_on"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_switch_status"
                    app:layout_constraintRight_toRightOf="@+id/gl_end"
                    app:layout_constraintTop_toTopOf="@+id/tv_switch_status" />


                <View
                    android:id="@+id/v_switch_margin_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@+id/tv_switch_status" />


                <androidx.constraintlayout.widget.Group
                    android:id="@+id/gp_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="tv_temp_use,cb_temp_use,v_temp_divider,tv_temp_status,tv_temp_onoff,tv_temp_value,iv_temp_more" />

                <TextView
                    android:id="@+id/tv_temp_use"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:text="@string/m255_use_this_condition"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintLeft_toLeftOf="@+id/gl_begin"
                    app:layout_constraintTop_toBottomOf="@+id/v_switch_margin_divider" />

                <CheckBox
                    android:id="@+id/cb_temp_use"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selector_checkbox"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textColor="@color/color_text_33"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_temp_use"
                    app:layout_constraintRight_toRightOf="@+id/gl_end"
                    app:layout_constraintTop_toTopOf="@+id/tv_temp_use" />

                <View
                    android:id="@+id/v_temp_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/tv_temp_use" />


                <View
                    android:id="@+id/v_temp_click"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_temp_status"
                    app:layout_constraintTop_toTopOf="@+id/tv_temp_status" />


                <TextView
                    android:id="@+id/tv_temp_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:text="@string/m241_setting_temperature"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintLeft_toLeftOf="@+id/gl_begin"
                    app:layout_constraintTop_toBottomOf="@+id/v_temp_divider" />

                <TextView
                    android:id="@+id/tv_temp_onoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/m167_on"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_temp_status"
                    app:layout_constraintRight_toLeftOf="@+id/tv_temp_status"
                    app:layout_constraintTop_toTopOf="@+id/tv_temp_status" />

                <TextView
                    android:id="@+id/tv_temp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/size_content_sp_14"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_temp_status"
                    app:layout_constraintRight_toRightOf="@+id/gl_end"
                    app:layout_constraintTop_toTopOf="@+id/tv_temp_status" />


                <ImageView
                    android:id="@+id/iv_temp_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_more"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_temp_status"
                    app:layout_constraintRight_toRightOf="@+id/gl_end"
                    app:layout_constraintTop_toTopOf="@+id/tv_temp_status" />


                <!--面板开关-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_panel_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_setting_parent" />


            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_62"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_62"
                android:layout_marginBottom="@dimen/dp_33"
                android:background="@drawable/selector_button_rect"
                android:text="@string/m90_ok"
                android:textColor="@color/white"
                android:textSize="@dimen/size_content_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
