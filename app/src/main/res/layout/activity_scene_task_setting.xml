<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerView"
        layout="@layout/toobar_title" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_pull"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <TextView
                android:id="@+id/tvDeviceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/color_text_33"
                android:textSize="@dimen/sp_23"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tvSceneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:textColor="@color/color_text_33"
                android:textSize="@dimen/size_content_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDeviceTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSettingParent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSceneName">

                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_25"
                    android:textColor="@color/color_text_33"
                    android:textSize="@dimen/sp_20"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--插座-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSocket"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeviceName">

                    <TextView
                        android:id="@+id/tvSocketStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/m214_switch_status"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvSocketOnoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/m167_on"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/ivSocketSwitch"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivSocketSwitch"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/scenes_on"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clThemostatStatus"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeviceName">

                    <TextView
                        android:id="@+id/tvThemostatStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/m214_switch_status"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvThemostatOnoff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/m167_on"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/ivThemostatSwitch"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivThemostatSwitch"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/scenes_on"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/v"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_2"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clThemostatStatus" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTemp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v">

                    <TextView
                        android:id="@+id/tvTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/m215_setting_temperature"
                        android:textColor="@color/color_text_33"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="@dimen/size_content_sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTempValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="28°"
                        android:textColor="@color/color_text_33"
                        android:textSize="@dimen/size_content_sp_14"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/rlMore"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/rlMore"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivMore11"
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_14"
                            android:src="@drawable/icon_more" />
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--面板开关-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPanelSetting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeviceName" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSettingParent" />




            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_62"
                android:layout_marginRight="@dimen/dp_62"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/selector_button_rect"
                android:text="@string/m90_ok"
                android:textColor="@color/white"
                android:textSize="@dimen/size_content_sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
