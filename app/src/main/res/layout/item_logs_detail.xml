<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/color_scene_launch_background"
    app:cardCornerRadius="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_164"
        android:layout_height="@dimen/dp_100">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_sence_add"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:maxLines="2"
            android:padding="@dimen/dp_5"
            android:text="@string/m83_logs"
            android:textColor="@color/white"
            android:textSize="@dimen/size_content_sp_14"
            app:autoSizeMaxTextSize="@dimen/size_content_sp_14"
            app:autoSizeMinTextSize="@dimen/size_content_sp_8"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/iv_add"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_add"
            app:layout_constraintTop_toTopOf="@+id/iv_add" />


        <ImageView
            android:id="@+id/iv_device_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


        <ImageView
            android:id="@+id/iv_device_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@+id/iv_device_one"
            app:layout_constraintTop_toTopOf="@+id/iv_device_one" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>