<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nocolor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_theme_green</item>
    </style>


    <!--分割线-->
    <style name="style_divider_view_dp_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
    </style>

    <style name="style_divider_view_dp_5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_5</item>
    </style>


    <!--注册页面-->
    <style name="style_linearlayout_login_register">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@drawable/shape_login_corner_no_stroke</item>
    </style>


    <style name="style_imageview_register_icon">
        <item name="android:layout_width">@dimen/dp_15</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_8</item>
        <item name="android:layout_marginRight">@dimen/dp_8</item>
    </style>


    <style name="style_edittext_register_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/color_text_00</item>
        <item name="android:textSize">@dimen/size_title_sp_12</item>
        <item name="android:textColorHint">@color/color_text_99</item>
    </style>



    <!--个人主页-->
    <style name="style_mine_linearlayout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:background">@drawable/selector_list_item_click</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp_9</item>
        <item name="android:paddingRight">@dimen/dp_9</item>
    </style>

    <style name="style_mine_tittle_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_title_sp_14</item>
        <item name="android:textColor">@color/color_text_00</item>
    </style>


    <style name="style_mine_text_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_content_sp_14</item>
        <item name="android:textColor">@color/color_text_66</item>
        <item name="android:singleLine">true</item>
    </style>



    <style name="style_personal_imageview_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>


    <!--关于-->
    <style name="style_about_linearlayout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="android:background">@drawable/selector_list_item_click</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp_9</item>
        <item name="android:paddingRight">@dimen/dp_9</item>
    </style>


    <style name="style_about_tittle_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_title_sp_14</item>
        <item name="android:textColor">@color/color_text_00</item>
    </style>


    <style name="style_about_text_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_content_sp_14</item>
        <item name="android:textColor">@color/color_text_66</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--导航tab-->

    <style name="style_tab_layout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/size_title_sp_16</item>
        <item name="android:textColor">@color/color_text_33</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--设备设置-->
    <style name="style_device_setting_linearlayout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:background">@drawable/selector_list_item_click</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/dp_9</item>
        <item name="android:paddingRight">@dimen/dp_9</item>
    </style>

    <style name="style_device_setting_tittle_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_title_sp_14</item>
        <item name="android:textColor">@color/color_text_00</item>
    </style>


    <style name="style_device_setting_text_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_content_sp_14</item>
        <item name="android:textColor">@color/color_text_66</item>
        <item name="android:singleLine">true</item>
    </style>



    <style name="style_device_setting_imageview_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>


    <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item> <!--新增一个item，用于控制menu-->
    </style>

    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="OverflowMenuStyle"   parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
